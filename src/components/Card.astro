---
interface Props {
  title: string;
  body: string;
  href: string;
}

const {href, title, body} = Astro.props;
---

<div class="card border-0 bg-white">
  <div class="card-body">
    <form>
      <div class="mb-3">
        <label for="email" class="form-label text-black-75">Email</label>
        <input type="email" class="form-control border-0 bg-light" id="email" aria-describedby="emailHelp" placeholder="example@email.org" />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label text-black-75">Password</label>
        <input type="password" class="form-control border-0 bg-light" id="password" placeholder="Your Password" />
      </div>
      <div class="mb-4">
        <label for="select" class="form-label text-black-75">Business category</label>
        <select class="form-select mb-3 border-0 bg-light" aria-label="Default select example" id="select">
          <option selected>Select Business category</option>
          <option value="Technology">Technology</option>
          <option value="Finance">Finance</option>
          <option value="Healthcare">Healthcare</option>
          <option value="Real Estate">Real Estate</option>
          <option value="Manufacturing">Manufacturing</option>
          <option value="Entertainment">Entertainment</option>
        </select>
      </div>
      <button type="submit" class="btn btn-success col-12">Get Started</button>
      <div class="row d-flex justify-content-start mt-3">
        <div class="col-1">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none">
            <path d="M12 15C15.866 15 19 11.866 19 8C19 4.13401 15.866 1 12 1C8.13401 1 5 4.13401 5 8C5 11.866 8.13401 15 12 15Z" stroke="#8D8F98" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
            <path d="M8.21 13.89L7 23L12 20L17 23L15.79 13.88" stroke="#8D8F98" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
        </div>
        <div class="col">
          <p class="fw-normal text-black-50">Licensed and regulated by The Monetary Authority of Singapore, Hong Kong Customs and Excise Department and Bank Indonesia.</p>
        </div>
      </div>
    </form>
  </div>
</div>
<style>
  .card {
    height: 100%;
    width: 30rem;
    border-radius: 12px;
    background: #fff;
    box-shadow: -32px 48px 60px 0px rgba(22, 23, 28, 0.04);
    display: inline-flex;
    padding: 42px 42px 10px 42px;
    flex-direction: column;
    align-items: flex-start;
    gap: 36px;
  }
  .btn-success {
    color: #fff;
    padding: 12px 0 12px 0;
    font-size: 12px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    letter-spacing: 0.16px;
  }

  @media only screen and (max-width: 700px) {
    .card {
      padding: 42px 10px 10px 10px;
    }
  }
</style>
