---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Card from "../components/Card.astro";
import Advantages from "../components/Advantages.astro";
import Footer from "../components/Footer.astro";
import * as Icon from "@astropub/icons";
---

<Layout title="Giv Money Finance">
  <main>
    <Navbar
      title={[
        {title: "Features", link: "/"},
        {title: "Resources", link: "/resources"},
        {title: "Blog", link: "/blog"},
        {title: "Career", link: "/career"},
        
      ]}
    />
    <section>
      <div class="container">
        <div class="row d-flex align-items-center mt-lg-0 mt-3">
          <div class="col-lg-6 col-12">
            <h1 class="fw-bold title">Simplifying Global <span class="title-span"> Finance</span></h1>
            <p class="fw-normal text-black-50">Faster, easier and cheaper cross border payment starts here</p>
            <div class="row mt-5 mb-lg-0 mb-3">
              <div class="col-lg-6 col-12 d-flex align-items-center">
                <Icon.Check size="22" fill="green" />
                <p class="fw-normal text-black-50 mb-0 ms-2">Licensed & Regulated</p>
              </div>
              <div class="col-lg-6 col-12 d-flex align-items-center">
                <Icon.Check size="22" fill="green" />
                <p class="fw-normal text-black-50 mb-0 ms-2">Hassle-free</p>
              </div>
              <div class="col-lg-6 col-12 d-flex align-items-center">
                <Icon.Check size="22" fill="green" />
                <p class="fw-normal text-black-50 mb-0 ms-2">100% Transparent</p>
              </div>
              <div class="col-lg-6 col-12 d-flex align-items-center">
                <Icon.Check size="22" fill="green" />
                <p class="fw-normal text-black-50 mb-0 ms-2">Across 180+ Countries</p>
              </div>
            </div>
          </div>
          <div class="col-lg-6 d-flex justify-content-center">
            <Card />
          </div>
        </div>
      </div>
    </section>
    <section class="container-fluid bg-light py-5 my-5">
      <div class="container">
        <div class="row d-flex align-items-center">
          <div class="col-lg-3 col-6">
            <img src="/images/airbnb.png" alt="" class="img-fluid w-lg-50 w-75" />
          </div>
          <div class="col-lg-3 col-6">
            <img src="/images/google.png" alt="" class="img-fluid w-lg-50 w-75" />
          </div>
          <div class="col-lg-3 col-6 mt-lg-0 mt-3">
            <img src="/images/microsoft.png" alt="" class="img-fluid w-lg-50 w-75" />
          </div>
          <div class="col-lg-3 col-6 mt-lg-0 mt-3">
            <img src="/images/slack.png" alt="" class="img-fluid w-lg-50 w-75" />
          </div>
        </div>
      </div>
    </section>
    <section class="pb-5">
      <div class="container">
        <div class="row">
          <div class="col">
            <h2 class="heading text-center fw-bold">
              We Provide the Easiest Way to <br />
              <span style="color: var(--primary-color)"> Manage Your Finances</span>
            </h2>
          </div>
        </div>
        <div class="row mt-lg-5">
          <Advantages
            title={[
              {title: "Great Trading", description: "We believe in the potential to provide groundbreaking solutions across industries.", image: "/svg/dollar-sign.svg", url: "/"},
              {title: "Security First", description: "Security has been our top consideration because when choosing an exchange, trust matters.", image: "/svg/shield.svg", url: "/"},
              {title: "Great Trading", description: "To enhance the safety aspect of our products, our products are developed using the latest robust technology.", image: "/svg/cpu.svg", url: "/"},
            ]}
          />
        </div>
      </div>
    </section>
    <section class="bg-light py-5 plan">
      <div class="container">
        <div class="row pb-5">
          <div class="col">
            <h2 class="heading text-center fw-bold">
              Upgrade Your Accesibility <br /> with
              <span style="color: var(--primary-color)">Professional Plan</span>
            </h2>
            <p class="fw-normal text-center text-black-50 my-3">Choose plan that suits your budget. Every plan has their own benefits so careful on your decision, its starts from here!</p>
          </div>
        </div>
        <div class="row d-flex justify-content-center px-lg-0 px-2">
          <div class="col-lg-3 mx-2">
            <div class="card px-3 pt-4 pb-3 border-0 rounded-4" style="height: 100%;">
              <div class="card-body">
                <p class="fw-semibold text-center">Free</p>
                <p class="fw-bold fs-3 text-center">$0 <span class="fw-normal fs-6">/month</span></p>
                <p class="fw-normal text-center text-black-50">All the basic benefits and features of <span style="color: var(--primary-color)" style="font-size: 12px;"> transwap</span></p>
                <div class="d-flex align-items-center mt-3">
                  <Icon.CheckCircled size="22" fill="gray" />
                  <p class="fw-normal text-black-75 mb-0 ms-2">Personal account</p>
                </div>
                <div class="d-flex align-items-center mt-2">
                  <Icon.CheckCircled size="22" fill="gray" />
                  <p class="fw-normal text-black-75 mb-0 ms-2">Unlimited version history</p>
                </div>
              </div>
              <div class="card-footer border-0 bg-white">
                <button class="btn btn-light col-12 mt-3 text-black-75 mt-5 rounded-5"> Choose Free</button>
              </div>
            </div>
          </div>
          <div class="col-lg-3 mx-2 mt-lg-0 mt-3">
            <div class="card card-plan px-3 pb-4 border-0 rounded-4 position-relative">
              <div class="row d-flex justify-content-center">
                <p class="fw-semibold most-popular col-6 text-center p-1">Most Popular</p>
              </div>
              <p class="fw-semibold text-center mt-3 text-white">Professional</p>
              <p class="fw-bold fs-3 text-center text-white">$49 <span class="fw-normal fs-6">/month</span></p>
              <p class="fw-normal text-center text-white">All the basic benefits and features of transwap</p>
              <div class="d-flex align-items-center mt-3">
                <Icon.CheckCircled size="22" fill="#fff" />
                <p class="fw-normal mb-0 ms-2 text-white">Personal account</p>
              </div>
              <div class="d-flex align-items-center mt-2">
                <Icon.CheckCircled size="22" fill="#fff" />
                <p class="fw-normal mb-0 ms-2 text-white">Unlimited version history</p>
              </div>
              <div class="d-flex align-items-center mt-2">
                <Icon.CheckCircled size="22" fill="#fff" />
                <p class="fw-normal mb-0 ms-2 text-white">Shareable data permission</p>
              </div>
              <div class="d-flex align-items-center mt-2">
                <Icon.CheckCircled size="22" fill="#fff" />
                <p class="fw-normal mb-0 ms-2 text-white">Custom users and admin</p>
              </div>
              <button class="btn btn-professional col-12 mt-3 mt-5 rounded-5"> Choose Professional</button>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="py-5 contact-us">
      <div class="container">
        <div class="row">
          <div class="col">
            <h2 class="heading text-center fw-bold">
              Faster and Easier Financial <br /> Management Starts Here
            </h2>
          </div>
        </div>
        <div class="row">
          <div class="col d-flex justify-content-center">
            <button class="btn btn-success mt-5 me-2 rounded-4 px-4 py-2">Contact US</button>
            <button class="btn btn-outline-dark mt-5 rounded-4 px-4 py-2">View Demo</button>
          </div>
        </div>
      </div>
    </section>
    <Footer />
  </main>
</Layout>
